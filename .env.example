# ============================================
# STABLR Platform - Backend Environment Variables
# Copy this file to .env and fill in the values
# ============================================

# ─── Server Configuration ────────────────────
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000
ALLOWED_ORIGINS=http://localhost:3000

# ─── Database (PostgreSQL / Neon) ────────────
DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require

# ─── Authentication (Clerk) ──────────────────
CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx

# ─── OpenAI (Required for test evaluation & embeddings) ──
OPENAI_API_KEY=sk-xxx
OPENAI_ORG_ID=

# ─── OpenRouter (Required for custom agent LLM) ─────
OPENROUTER_API_KEY=sk-or-xxx

# ─── Voice Services (Required for voice-based tests) ─
ELEVENLABS_API_KEY=
DEEPGRAM_API_KEY=

# ─── Twilio (Optional - for phone-based testing) ─────
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ─── LiveKit (Optional - for LiveKit provider) ───────
LIVEKIT_URL=

# ─── Email / SMTP (Required for notifications) ──────
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@stablr.ai

# ─── Google Calendar (Optional - for booking with Meet links) ─
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REFRESH_TOKEN=
GOOGLE_CALENDAR_ID=primary
GOOGLE_REDIRECT_URI=http://localhost:5000/api/google/callback

# ─── Encryption (Required for secure API key storage) ─
ENCRYPTION_KEY=your-32-char-random-string-here

# ─── Super Admin ─────────────────────────────
ADMIN_JWT_SECRET=your-admin-jwt-secret

# ─── Redis (Optional - for job queue) ────────
REDIS_URL=redis://localhost:6379

# ─── Logging ─────────────────────────────────
LOG_LEVEL=info

# ─── Feature Flags ──────────────────────────
MOCK_VOICE_AGENT=false
